<article
  class="relative group flex h-[340px] flex-col overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm transition
         hover:border-slate-300 hover:shadow hover:-translate-y-1">

  <div class="relative">
    <% unless user_signed_in? %>
      <!-- カード全体ホバーで表示 -->
      <div class="pointer-events-none absolute left-1/2 -translate-x-1/2 top-full z-20 mt-2
                  opacity-0 transition-opacity
                  group-hover:opacity-100">
        <div class="relative rounded-md bg-slate-900/90 px-3 py-1.5 text-xs text-white shadow">
          <%= t("posts.index.login_required_tooltip") %>
          <!-- ヘッダーに向く三角 -->
          <span class="absolute -top-1 left-10 h-2 w-2 rotate-45 bg-slate-900/90"></span>
        </div>
      </div>
    <% end %>

    <!-- 県 / カテゴリ (詳細画面へリンク) -->
    <%= link_to post_path(post), class: "block relative z-0" do %>
      <div class="flex items-center justify-between bg-[#92B099] px-5 py-2 text-base text-white transition hover:bg-[#86A78D]">
        <div class="flex items-center gap-2">
          <span class="font-semibold"><%= post.prefecture_name %></span>
          <span class="mx-2 text-base text-white/90">の</span>
          <span class="font-semibold"><%= post.category.name %></span>
        </div>
        <span class="text-lg text-white" aria-hidden="true">›</span>
      </div>
    <% end %>
  </div>

  <div class="flex flex-1 flex-col gap-3 p-5">
    <!-- ユーザー -->
    <div class="flex items-center gap-3">
      <!-- アイコン（仮） -->
      <div class="h-12 w-12 rounded-full bg-slate-200"></div>

      <div class="min-w-0">
        <p class="truncate text-sm font-semibold text-slate-700">
          <%= post.user.name %>
        </p>
        <p class="text-xs text-slate-500">
          <%= post.place_name.presence || "" %>
        </p>
      </div>
    </div>

    <!-- 本文 -->
    <% clamp_class = post.image.attached? ? "line-clamp-2" : "line-clamp-6" %>

    <p class="text-sm leading-relaxed text-slate-700 <%= clamp_class %> min-h-0">
      <%= post.body %>
    </p>

    <!-- 写真 -->
    <% if post.image.attached? %>
      <div class="h-24 overflow-hidden rounded-xl bg-slate-100 flex items-center justify-center">
        <%= image_tag post.image_index,
              class: "h-full w-full object-contain" %>
      </div>
    <% end %>

    <!-- リアクション -->
    <div class="mt-auto border-t border-slate-100 pt-3 flex items-center justify-between">
      <%= render "posts/reactions", post: post %>
      <span class="text-xs text-slate-500"><%= post.created_at.strftime("%m/%d %H:%M") %></span>
    </div>
  </div>
</article>