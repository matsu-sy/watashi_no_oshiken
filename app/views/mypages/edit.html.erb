<% content_for :page_title, t(".title") %>

<div class="mx-auto w-full max-w-2xl px-4 pb-10 sm:pb-12">
  <!-- プロフィールカード -->
  <section class="rounded-2xl border border-slate-200 bg-white shadow-sm">
    <!-- カードヘッダー：タイトル + 戻る -->
    <div class="flex items-center justify-between px-6 py-6 sm:px-8 sm:pt-8">
      <h2 class="text-base font-semibold text-[#5B5652] mx-auto"><%= t(".profile") %></h2>
    </div>

    <div class="px-8 pb-8 sm:px-10 sm:pb-10">
      <div class="mb-8 flex flex-col items-center text-center">

        <div class="relative mt-5">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar_show,
                  class: "h-24 w-24 rounded-full object-cover ring-2 ring-[#92B099]/30 bg-white" %>

            <div class="absolute -right-3 -bottom-3">
              <%= button_to t(".delete_avatar"),
                    avatar_mypage_path,
                    method: :delete,
                    form: { data: { turbo_confirm: t(".delete_avatar_confirm") } },
                    class: "rounded-full border border-rose-200 bg-white px-3 py-1.5 text-xs font-medium text-rose-700 shadow-sm hover:bg-rose-50" %>
            </div>
          <% else %>
            <div class="h-24 w-24 rounded-full bg-slate-100 ring-2 ring-[#92B099]/30 flex items-center justify-center">
              <span class="text-xl font-semibold text-slate-500">
                <%= @user.name.to_s.strip.first&.upcase || "?" %>
              </span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- フォーム -->
      <%= form_with model: @user, url: mypage_path, method: :patch,
            local: true, data: { turbo: false }, html: { multipart: true } do |f| %>

        <div class="grid grid-cols-[90px,1fr] items-center gap-x-6 gap-y-5">
          <!-- 画像 -->
          <div class="text-sm font-medium text-center text-slate-600"><%= t(".avatar") %></div>
          <div>
            <%= f.file_field :avatar, accept: "image/*",
                  class: "block w-full rounded-xl border border-slate-200 bg-white text-sm text-slate-700
                          file:mr-3 file:rounded-lg file:border-0 file:bg-[#92B099]/40 file:px-4 file:py-2
                          file:text-sm file:font-medium file:text-[#5B5652] hover:file:bg-[#92B099]/55
                          focus:outline-none focus:ring-2 focus:ring-[#92B099]/35" %>
          </div>

          <!-- 名前 -->
          <div class="text-sm font-medium text-center text-slate-600"><%= t(".name") %></div>
          <div>
            <%= f.text_field :name,
                  class: "w-full rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-800 shadow-sm focus:border-[#92B099] focus:ring-4 focus:ring-[#92B099]/20",
                  placeholder: t(".name_placeholder") %>
          </div>

          <!-- 出身地 -->
          <div class="text-sm font-medium text-center text-slate-600"><%= t(".hometown") %>
            <!-- 公開設定 -->
            <div class="flex items-center mt-5">
              <label class="inline-flex items-center gap-3 select-none">
                <%= f.check_box :hometown_visibility, class: "sr-only peer" %>

                <span class="relative inline-flex h-6 w-11 items-center rounded-full bg-slate-300 transition
                            peer-checked:bg-[#92B099]
                            after:content-[''] after:absolute after:left-1 after:top-1 after:h-4 after:w-4 after:rounded-full after:bg-white after:shadow
                            after:transition after:translate-x-0 peer-checked:after:translate-x-5">
                </span>
                <span class="text-xs font-medium text-slate-700"><%= t(".visible") %></span>
              </label>
            </div>
          </div>

          <div class="rounded-2xl bg-slate-50 px-3 py-4 shadow-sm focus:border-[#92B099] focus:ring-4 focus:ring-[#92B099]/20">
            <div class="gap-4 sm:grid-cols-[120px,1fr] sm:items-start">

              <!-- 出身県（最大3つ） -->
              <% selected_codes = @hometowns.order(:created_at).limit(3).map(&:prefecture_code) %>
              <% selected_codes += [nil] * (3 - selected_codes.size) %>

              <div class="space-y-3">
                <% 3.times do |i| %>
                  <%= select_tag "user[hometown_prefecture_codes][]",
                        options_for_select([[t(".hometown_unset"), ""]] + JpPrefecture::Prefecture.all.map { |p| [p.name, p.code] }, selected_codes[i].to_s),
                        class: "w-full rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-800 shadow-sm focus:border-[#92B099] focus:ring-4 focus:ring-[#92B099]/20" %>
                <% end %>

                <p class="text-xs text-slate-500 pl-3"><%= t(".hometown_help") %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="pt-8 text-center space-y-3">
          <%= f.submit nil,
                class: "inline-flex items-center justify-center rounded-lg
                      bg-[#92B099] px-8 py-3 text-base leading-none font-semibold text-white
                      shadow-sm hover:bg-[#84A88F]
                      focus:outline-none focus:ring-2 focus:ring-[#92B099]/50" %>

          <div>
            <%= link_to t(".back"), mypage_path,
                  class: "text-sm text-slate-600 hover:text-slate-800
                        underline underline-offset-4" %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>
