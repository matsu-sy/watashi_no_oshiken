<%# locals: title: , subtitle: (optional) %>
<section class="bg-[#E7D8C8]/85 border-b border-black/10">
  <div class="mx-auto max-w-5xl px-4 py-8 text-center">
    <h1 class="text-xl sm:text-2xl font-semibold tracking-wide text-slate-700">
      <%= title %>
    </h1>

    <% if local_assigns[:subtitle].present? %>
      <p class="mt-2 text-sm text-slate-600">
        <%= subtitle %>
      </p>
    <% end %>
  </div>
</section>